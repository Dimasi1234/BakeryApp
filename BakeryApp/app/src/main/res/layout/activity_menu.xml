<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D89564">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Cart Icon -->

            <!-- Profile Picture with Circular Frame -->
            <ImageView
                android:id="@+id/cart_icon"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="96dp"
                android:src="@drawable/Cart2" />

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="303dp"
                android:background="@drawable/circle_frame"
                android:scaleType="centerCrop"
                android:src="@drawable/Profile" />
        </RelativeLayout>

        <!-- Banner Image -->
        <ImageView
            android:id="@+id/banner_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/Cake1"
            android:layout_marginBottom="16dp" />

        <!-- Grid of 6 images with text labels -->
        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:columnOrderPreserved="true"
            android:gap="16dp">

            <!-- Item 1 -->
            <LinearLayout
                android:layout_width="177.4dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="177.4dp"
                    android:layout_height="177.4dp"
                    android:src="@drawable/Cake2"
                    android:background="@drawable/Cake2"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="177.4dp"
                    android:layout_height="57.2dp"
                    android:gravity="center"
                    android:text="Item 1"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:background="#FFFFFF" />
            </LinearLayout>

            <!-- Item 2 -->
            <LinearLayout
                android:layout_width="177.4dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="177.4dp"
                    android:layout_height="177.4dp"
                    android:src="@drawable/Cake3"
                    android:background="@drawable/Cake3"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="177.4dp"
                    android:layout_height="57.2dp"
                    android:gravity="center"
                    android:text="Item 2"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:background="#FFFFFF" />
            </LinearLayout>

            <!-- Item 3 -->
            <LinearLayout
                android:layout_width="177.4dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="177.4dp"
                    android:layout_height="177.4dp"
                    android:src="@drawable/Cake4"
                    android:background="@drawable/Cake4"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="177.4dp"
                    android:layout_height="57.2dp"
                    android:gravity="center"
                    android:text="Item 3"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:background="#FFFFFF" />
            </LinearLayout>

            <!-- Item 4 -->
            <LinearLayout
                android:layout_width="177.4dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="177.4dp"
                    android:layout_height="177.4dp"
                    android:src="@drawable/Cake5"
                    android:background="@drawable/Cake5"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="177.4dp"
                    android:layout_height="57.2dp"
                    android:gravity="center"
                    android:text="Item 4"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:background="#FFFFFF" />
            </LinearLayout>

            <!-- Item 5 -->
            <LinearLayout
                android:layout_width="177.4dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="177.4dp"
                    android:layout_height="177.4dp"
                    android:src="@drawable/Cake6"
                    android:background="@drawable/Cake6"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="177.4dp"
                    android:layout_height="57.2dp"
                    android:gravity="center"
                    android:text="Item 5"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:background="#FFFFFF" />
            </LinearLayout>

            <!-- Item 6 -->
            <LinearLayout
                android:layout_width="177.4dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="177.4dp"
                    android:layout_height="177.4dp"
                    android:src="@drawable/Cake7"
                    android:background="@drawable/Cake7"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="177.4dp"
                    android:layout_height="57.2dp"
                    android:gravity="center"
                    android:text="Item 6"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:background="#FFFFFF" />
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</ScrollView>
